    <Style Selector="Expander /template/ Border#ExpanderContent">
        <Setter Property="IsVisible" Value="False" />
    </Style>
    <Style Selector="Expander:expanded /template/ Border#ExpanderContent">
        <Setter Property="IsVisible" Value="True" />
    </Style>
    
</Styles>